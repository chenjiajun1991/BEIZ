<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="70dp">



    <RelativeLayout
        android:id="@+id/me_title"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#0099ff">

        <!--<ImageView-->
            <!--android:id="@+id/set_info"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/set_info"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/head_portrait"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher"
                />
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Angle"/>
            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="辽宁省*大连市"/>

        </LinearLayout>



    </RelativeLayout>



        <Button
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:id="@+id/text_user_params"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:text="轮椅状态"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/lunyi"
            android:background="@drawable/me_selector"/>

    <Button
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:id="@+id/text_user_share"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:text="个人信息"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/share"
        android:background="@drawable/me_selector"/>

    <Button
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:id="@+id/text_user_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:text="添加设备"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/add_lunyi"
        android:background="@drawable/me_selector"/>

    <Button
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:id="@+id/text_user_sosPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:text="紧急联系人"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/sos"
        android:background="@drawable/me_selector"/>

    <Button
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:id="@+id/text_user_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:text="注销"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/exit"
        android:background="@drawable/me_selector"
        />



</LinearLayout>
